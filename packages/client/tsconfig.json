{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "lib": ["es2015", "es2017", "dom"],
    "outDir": "dist",
    "baseUrl": "src",
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "declaration": true,
    "types": ["node", "jest"],                           /* Type declaration files to be included in compilation. */
  },
  "include": [ "src/**/*" ]
}
